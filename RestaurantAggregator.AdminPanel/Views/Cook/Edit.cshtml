@model RestaurantAggregator.AdminPanel.Models.Cook.CookModel

@{
    ViewBag.Title = "Edit Cook";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<p>@Model.Name</p>

<form asp-action="Delete" method="post">
    <input type="hidden" name="cookId" value="@Model.Id"/>
    <input type="hidden" name="restaurantId" value="@Model.Restaurant.Id"/>
    <button style="background: orangered" type="submit" name="id" value="@Model.Id">Delete</button>
</form>