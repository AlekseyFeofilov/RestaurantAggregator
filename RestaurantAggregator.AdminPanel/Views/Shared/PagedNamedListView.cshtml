@model PagedNamedListModel

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

<form style="display: inline">
    <input type="search" name="contains" value="@Model.Contains">
    <button type="submit" asp-action="Search">Search</button>
</form>

<form style="display: inline">
    <button type="submit" asp-action="Create" formmethod="get">Add</button>
</form>

<form>
    @{
        foreach (var item in Model.NamedItems)
        {
            <button style="display: block" type="submit" asp-action="Edit" formmethod="get" name="id" value="@item.Id" class="btn btn-link">@item.Name</button>
        }
    }
</form>

<form>
    <input type="hidden" name="contains" value="@Model.Contains">
    
    @{
        var startIndex = Math.Max(1, Model.PageInfoModel.Current - 2);
        var endIndex = Math.Min(Model.PageInfoModel.Size, Model.PageInfoModel.Current + 2);

        if (startIndex > 1)
        {
            <button type="submit" asp-action="Index" name="page" value="1" class="material-symbols-outlined">keyboard_double_arrow_left</button>
        }

        for (var i = startIndex; i <= endIndex; i++)
        {
            if (i != Model.PageInfoModel.Current)
            {
                <button type="submit" asp-action="Index" name="page" value="@i">@i</button>
            }
            else
            {
                <button type="submit" asp-action="Index" name="page" value="@i" style="background: white">@i</button>
            }
        }

        if (endIndex < Model.PageInfoModel.Size)
        {
            <button type="submit" asp-action="Index" name="page" value="@Model.PageInfoModel.Size" class="material-symbols-outlined">keyboard_double_arrow_right</button>
        }
    }
</form>